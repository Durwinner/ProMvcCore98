@model List<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<div class="bg-primary m-1 p-1 text-white"><h4>Roles</h4></div>
<table class="table table-sm table-bordered">
    <tr><th>ID</th><th>Name</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">No Role Exists</td></tr>
    }
    else
    {
        foreach (IdentityRole role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit"
                           asp-route-id="@role.Id">Edit</a>
                        <button type="submit"
                                class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

